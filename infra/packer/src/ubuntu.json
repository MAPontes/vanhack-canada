{
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami": "ami-66506c1c",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "vanhack-example {{timestamp}}",
    "tags": {
      "Name": "vanhack-test",
      "app": "myapp"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sudo apt-get update",
      "sudo apt-get install awscli -y",
      "sudo aws s3 cp s3://vanhack-test-deploy/string_calculator.tgz .",
      "sudo tar xvzf string_calculator.tgz"
    ]
  }]
}
